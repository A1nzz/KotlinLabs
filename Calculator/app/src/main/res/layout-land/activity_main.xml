<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:background="@color/customGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        >

        <EditText
            android:id="@+id/displayEditText"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginBottom="5dp"
            android:lines="2"
            android:maxLines="2"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginBottom="5dp"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"

            android:textSize="16sp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7">

        <Button
            android:id="@+id/buttonPow"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2sp"


            android:onClick="onPowClick"
            android:paddingVertical="5sp"
            android:text="^"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonSqrt"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onSqrtClick"
            android:paddingVertical="5sp"


            android:text="Sqrt"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonSin"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onSinClick"
            android:paddingVertical="5sp"


            android:text="sin"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonCos"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2sp"
            android:onClick="onCosClick"
            android:paddingVertical="5sp"
            android:text="cos"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonTg"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2sp"
            android:onClick="onTgClick"
            android:paddingVertical="5sp"
            android:text="tg"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonCtg"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2sp"
            android:onClick="onCtgClick"
            android:paddingVertical="5sp"
            android:text="ctg"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonPi"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2sp"
            android:onClick="onPiClick"
            android:paddingVertical="5sp"
            android:text="Pi"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonLn"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2sp"
            android:onClick="onLnClick"
            android:paddingVertical="5sp"
            android:text="ln"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonClear"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onClearClick"
            android:paddingVertical="5sp"


            android:text="AC"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonOpenBrackets"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onOpenBracket"
            android:paddingVertical="5sp"


            android:text="@string/openBracket"
            android:textSize="15sp" />


        <Button
            android:id="@+id/buttonCloseBrackets"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onCloseBracket"
            android:paddingVertical="5sp"


            android:text="@string/closeBracket"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonDivide"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onDivideClick"
            android:paddingVertical="5sp"


            android:text="@string/divideText"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button7"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onDigitClick"
            android:paddingVertical="5sp"


            android:text="7"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button8"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onDigitClick"
            android:paddingVertical="5sp"


            android:text="8"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button9"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onDigitClick"
            android:paddingVertical="5sp"


            android:text="9"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonMultiply"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="6"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onMultiplyClick"
            android:paddingVertical="5sp"


            android:text="@string/multiplyText"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button6"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onDigitClick"
            android:paddingVertical="5sp"


            android:text="6"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button5"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onDigitClick"
            android:paddingVertical="5sp"


            android:text="5"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button4"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onDigitClick"
            android:paddingVertical="5sp"


            android:text="4"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonSubtract"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="6"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onSubstractClick"
            android:paddingVertical="5sp"


            android:text="@string/substractText"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button1"

            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onDigitClick"
            android:paddingVertical="5sp"


            android:text="@string/_1"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button2"

            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onDigitClick"
            android:paddingVertical="5sp"


            android:text="2"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button3"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onDigitClick"
            android:paddingVertical="5sp"


            android:text="3"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonAdd"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="6"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onAddClick"
            android:paddingVertical="5sp"


            android:text="@string/addText"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button0"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="5"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onDigitClick"
            android:paddingVertical="5sp"


            android:text="0"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonDot"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="5"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onDigitClick"
            android:paddingVertical="5sp"


            android:text="."
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonBackspace"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="5"
            android:layout_columnWeight="1"

            android:layout_margin="2sp"


            android:onClick="onBackspaceClick"
            android:paddingVertical="5sp"


            android:text="âŒ«"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonEquals"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="6"
            android:layout_columnWeight="1"
            android:layout_margin="2sp"

            android:onClick="onEqualsClick"
            android:paddingVertical="5sp"

            android:text="="
            android:textSize="15sp" />
    </GridLayout>

</LinearLayout>