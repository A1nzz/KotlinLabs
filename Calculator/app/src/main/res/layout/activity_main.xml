<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/customGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="16dp"
        >
        <EditText
            android:id="@+id/displayEditText"
            android:layout_width="match_parent"
            android:layout_height="110sp"
            android:text=""
            android:lines="2"
            android:maxLines="2"
            android:textAlignment="textEnd"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            />
        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/white"
            android:textAlignment="textEnd"

            android:textSize="24sp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4">

        <Button
            android:id="@+id/buttonClear"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:onClick="onClearClick"
            android:text="AC"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonOpenBrackets"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:onClick="onOpenBracket"
            android:text="@string/openBracket"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />


        <Button
            android:id="@+id/buttonCloseBrackets"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:onClick="onCloseBracket"
            android:text="@string/closeBracket"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonDivide"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:onClick="onDivideClick"
            android:text="@string/divideText"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button7"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="onDigitClick"
            android:text="7"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button8"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="onDigitClick"
            android:text="8"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />
        <Button
            android:id="@+id/button9"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="onDigitClick"
            android:text="9"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonMultiply"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="onMultiplyClick"
            android:text="@string/multiplyText"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />
        <Button
            android:id="@+id/button6"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="onDigitClick"
            android:text="6"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />
        <Button
            android:id="@+id/button5"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="onDigitClick"
            android:text="5"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />
        <Button
            android:id="@+id/button4"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="onDigitClick"
            android:text="4"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonSubtract"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="onSubstractClick"
            android:text="@string/substractText"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button1"

            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:onClick="onDigitClick"
            android:text="@string/_1"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button2"

            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:onClick="onDigitClick"
            android:text="2"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />
        <Button
            android:id="@+id/button3"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="onDigitClick"
            android:text="3"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonAdd"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="onAddClick"
            android:text="@string/addText"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button0"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:onClick="onDigitClick"
            android:text="0"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonDot"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="onDigitClick"
            android:text="."
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonBackspace"
            style="@style/NumberButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="onBackspaceClick"
            android:text="⌫"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonEquals"
            style="@style/ActionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:onClick="onEqualsClick"
            android:text="="
            android:layout_row="4"
            android:layout_column="3"
            android:layout_margin="5sp"
            android:paddingVertical="20sp"
            android:textSize="30sp" />
    </GridLayout>

</LinearLayout>